<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="adapter"
            type="com.nic.ODF_Thittam.adapter.PendingScreenAdapter" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/android_card_view_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <RelativeLayout
                android:id="@+id/pmay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:id="@+id/view_offline_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >

                    <ImageView
                        style="@string/font_circular_book"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_gallery_icon"
                        android:contentDescription="@string/view_offline_image"
                         />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/view_offline_images"
                    android:layout_toStartOf="@+id/upload"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/name_of_tank"
                            style="@style/font_circular_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/name_of_the_tank"
                            android:textAlignment="center"
                            android:textColor="#000080"
                            android:textSize="18sp"
                            android:visibility="gone"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/work_id"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000"
                                    android:textSize="18sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:textSize="18sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/work_id"
                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textAlignment="inherit"
                                    android:textColor="#000"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/sec_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/stage"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000"
                                    android:textSize="18sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:textSize="18sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/stage_name"
                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textAlignment="inherit"
                                    android:textColor="#000"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cd_work_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/cd_work_no"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000"
                                    android:textSize="18sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView

                                    style="@string/font_circular_book"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:textSize="18sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/cd_work_no"
                                    style="@string/font_circular_book"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textAlignment="inherit"
                                    android:textColor="#000"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_7sdp">

                    <ImageView
                        android:id="@+id/sync_track_info"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_upload_icon"
                        android:contentDescription="@string/upload_icon" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>