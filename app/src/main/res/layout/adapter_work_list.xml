                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/hide_data_layout">

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_block_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_block_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="3.5"
                android:text="@string/block_en"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_block"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_village_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_village_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="3.5"
                android:text="@string/village_en"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_village"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_gender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="3.5"
                android:text="@string/gender_en"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_community_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_weight="3.5"
                android:text="@string/community"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_community"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_initialAmount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/initialAmount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_weight="3.5"
                android:text="@string/initial_amount"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_initialAmount"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_amountSpentSoFar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/amountSpentSoFar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="3.5"
                android:text="@string/amount_spent_so_far"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_amountSpentSoFar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/tv_last_visited_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="3.5"
                android:text="@string/last_visited_date"
                android:textColor="#000000"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_visited_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="6.5"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        </LinearLayout>
</LinearLayout>

    <ImageView
        android:id="@+id/take_photo"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_18sdp"
        android:gravity="end"
        android:src="@drawable/ic_camera_photo_picture_icon"
        android:contentDescription="@string/camera_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/view_online_Image"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/view_online_image"
            android:background="@drawable/new_bg_color_"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/view_additional_works"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/new_bg_color_"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="@string/view_cd_works"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />
    </RelativeLayout>

        <ImageView
            android:id="@+id/less_data_show_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_18sdp"
            android:gravity="end"
            android:src="@drawable/ic_up_triangle"
            android:contentDescription="@string/hide_show_icon" />
